<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBg"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/backLayout"
                layout="@layout/back_action" />

            <com.flower.basket.orderflower.views.ThemeText
                style="@style/ScreenTitleStyle"
                android:text="@string/settings" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/screen_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:id="@+id/llBasicInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llChangeProfilePic"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/HomeTextBoxStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.flower.basket.orderflower.views.ThemeText
                        style="@style/SettingsFieldTextStyle"
                        android:layout_weight="1"
                        android:text="@string/change_profile_pic" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:adjustViewBounds="true"
                        android:rotation="180"
                        android:src="@drawable/ic_back_arrow"
                        app:tint="@color/themeColor" />

                </LinearLayout>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llColorScheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/HomeTextBoxStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.flower.basket.orderflower.views.ThemeText
                        style="@style/SettingsFieldTextStyle"
                        android:layout_weight="1"
                        android:text="@string/change_color_scheme" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:adjustViewBounds="true"
                        android:rotation="180"
                        android:src="@drawable/ic_back_arrow"
                        app:tint="@color/themeColor" />

                </LinearLayout>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/HomeTextBoxStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.flower.basket.orderflower.views.ThemeText
                        style="@style/SettingsFieldTextStyle"
                        android:layout_weight="1"
                        android:text="@string/my_profile" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:adjustViewBounds="true"
                        android:rotation="180"
                        android:src="@drawable/ic_back_arrow"
                        app:tint="@color/themeColor" />

                </LinearLayout>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/HomeTextBoxStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.flower.basket.orderflower.views.ThemeText
                        style="@style/SettingsFieldTextStyle"
                        android:layout_weight="1"
                        android:text="@string/logout"
                        android:textColor="@android:color/holo_red_dark" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:adjustViewBounds="true"
                        android:rotation="180"
                        android:src="@drawable/ic_back_arrow"
                        app:tint="@color/themeColor" />

                </LinearLayout>

                <View style="@style/DividerStyle" />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            style="@style/dialog_appCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/versionBoxBg"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <com.flower.basket.orderflower.views.ThemeBoldText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_20ssp" />

                <com.flower.basket.orderflower.views.ThemeText
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Version 1.0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>