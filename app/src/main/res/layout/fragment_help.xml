<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBg"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/backLayout"
                layout="@layout/back_action" />

            <com.flower.basket.orderflower.views.ThemeText
                style="@style/ScreenTitleStyle"
                android:text="@string/help" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/screen_bottomImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/screen_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:id="@+id/llAppContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <com.flower.basket.orderflower.views.ThemeText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_app_support"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:id="@+id/llAppMail"
                style="@style/HomeTextBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.flower.basket.orderflower.views.ThemeText
                    style="@style/HomeFieldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_id" />

                <com.flower.basket.orderflower.views.ThemeText
                    android:id="@+id/tvAppEmailID"
                    style="@style/HomeFieldValueTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="heyrishihere@gmail.com" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAppPhoneNumber"
                style="@style/HomeTextBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.flower.basket.orderflower.views.ThemeText
                    style="@style/HomeFieldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_no" />

                <com.flower.basket.orderflower.views.ThemeText
                    android:id="@+id/tvAppPhoneNumber"
                    style="@style/HomeFieldValueTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+91 8019140047" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVendorContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <com.flower.basket.orderflower.views.ThemeText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_vendor_support"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:id="@+id/llVendorName"
                style="@style/HomeTextBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.flower.basket.orderflower.views.ThemeText
                    style="@style/HomeFieldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name" />

                <com.flower.basket.orderflower.views.ThemeText
                    android:id="@+id/tvVendorName"
                    style="@style/HomeFieldValueTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVendorMail"
                style="@style/HomeTextBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.flower.basket.orderflower.views.ThemeText
                    style="@style/HomeFieldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_id" />

                <com.flower.basket.orderflower.views.ThemeText
                    android:id="@+id/tvVendorEmailID"
                    style="@style/HomeFieldValueTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVendorPhoneNumber"
                style="@style/HomeTextBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.flower.basket.orderflower.views.ThemeText
                    style="@style/HomeFieldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_no" />

                <com.flower.basket.orderflower.views.ThemeText
                    android:id="@+id/tvVendorPhoneNumber"
                    style="@style/HomeFieldValueTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>