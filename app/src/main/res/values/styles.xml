    </style>

    <style name="LoginTabRBStyle">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
    </style>

    <style name="LoginFieldsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_fields</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="fontFamily">@font/pangram_regular</item>
    </style>

</resources>