<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppTheme">
        <item name="android:windowBackground">@drawable/ic_splash</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>

        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>-->

        <!-- TODO to make status bar icons black -->
        <!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->

    </style>

    <style name="LoginTheme" parent="Theme.AppTheme">
        <item name="colorPrimaryDark">@color/loginStatusBar</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>

        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>-->

        <!-- TODO to make status bar icons black -->
        <!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->

    </style>

    <style name="LoginTabRBStyle">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
    </style>

    <style name="LoginFieldsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_fields</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="fontFamily">@font/pangram_regular</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/themeColorUltraLight</item>
    </style>

    <style name="HomeTextBoxStyle">
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HomeFieldTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/home_FieldTextColor</item>
        <item name="android:textSize">@dimen/app_field_textSize</item>
    </style>

    <style name="HomeFieldValueTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/app_field_textSize</item>
        <item name="android:textColor">@color/home_FieldValueTextColor</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/backgroundActionbar</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="ScreenTitleStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/toolbarTitleColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SettingsFieldTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/home_FieldTextColor</item>
        <item name="android:textSize">@dimen/settings_field_textSize</item>
    </style>

    <style name="dialog_appCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/_12sdp</item>
        <item name="cardElevation">0dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="subscription_ItemCard">
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginStart">@dimen/_7sdp</item>
        <item name="android:layout_marginEnd">@dimen/_7sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
    </style>

    <style name="subscription_ItemBox">
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
    </style>

    <style name="subscription_ItemSelectedIcon">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ic_selected</item>
    </style>

    <style name="AppEditableFieldsStyle">
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:background">@drawable/editable_field_bg</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/editable_text_hint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_20sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_20sdp</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/ProcessDialogTheme</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="ProcessDialogTheme">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>


<!--    <style name="alert_dialog" parent="android:Theme.Dialog">-->
    <style name="alert_dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:background">@drawable/dialog_button_background</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/_18sdp</item>
        <item name="android:paddingRight">@dimen/_18sdp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

</resources>